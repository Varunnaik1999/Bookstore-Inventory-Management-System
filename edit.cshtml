@model List<WebApplication1.Models.bookes>
@{
    ViewBag.Title = "Home Page";
}
    <form action="updateDetails" method="POST">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="row">
                    <input type="text" class="form-control" name="ID" value="@item.ID" style="display:none;"/>
                    <div class="col-xs-1">Title</div>
                    <div class="col-xs-11"><input type="text" class="form-control" name="Title" value="@item.Title" /></div>
                </div>
                <div class="row" style="margin-top:1%">
                    <div class="col-xs-1">Author</div>
                    <div class="col-xs-11"><input type="text" class="form-control" name="Author" value="@item.Author" /></div>
                </div>
                <div class="row" style="margin-top:1%">
                    <div class="col-xs-1">ISBN</div>
                    <div class="col-xs-11"><input type="text" class="form-control" name="ISBN" value="@item.ISBN" /></div>
                </div>
                <div class="row" style="margin-top:1%">
                    <div class="col-xs-1">Publisher</div>
                    <div class="col-xs-11"><input type="text" class="form-control" name="Publisher" value="@item.Publisher" /></div>
                </div>
                <div class="row" style="margin-top:1%">
                    <div class="col-xs-1">Year</div>
                    <div class="col-xs-11"><input type="text" class="form-control" name="yearIs" value="@item.YearIs" /></div>
                </div>
                <div class="row" style="margin-top:1%">
                    <div class="col-xs-1">
                        <button class="btn btn-success" type="submit">Save</button>
                    </div>
                    <div class="col-xs-1">
                        <a href="/"><button class="btn btn-danger" type="button">Cancel</button></a>
                    </div>
                </div>
            }
        }
        </form>